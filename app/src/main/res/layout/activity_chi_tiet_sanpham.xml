<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ChiTietSanphamActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarManHinhChiTietSanpham"
        app:title="Chi tiết sản phẩm"
        app:titleTextColor="#f6f6ee"
        android:background="#49b984"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageviewchitietsanpham"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textviewtenchitietsanpham"
                android:textSize="20sp"
                android:text="Tên sản phẩm"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textColor="#49b984"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textviewgiachitietsanpham"
                android:textSize="17sp"
                android:text="Giá sản phẩm"
                android:layout_margin="5dp"
                android:textColor="#898b8b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <Spinner
                android:id="@+id/spinnerchitietsanpham"
                android:background="@drawable/spinner"
                android:padding="5dp"
                android:layout_margin="3dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:tooltipText="Chọn số lượng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>
            
            <Button
                android:id="@+id/buttonthemgiohang"
                android:layout_marginTop="10dp"
                android:text="Thêm vào giỏ hàng"
                android:textColor="#f0f0f0"
                android:textSize="15dp"
                android:background="#49b984"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="match_parent">
        <TextView
            android:textSize="27sp"
            android:text="Mô tả sản phẩm"
            android:textStyle="italic|bold"
            android:layout_margin="5dp"
            android:textColor="#4ab985"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textviewmotachitietsanpham"
                android:textSize="17sp"
                android:text="Mô tả chi tiết sản phẩm"
                android:layout_margin="5dp"
                android:textColor="#34394e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>